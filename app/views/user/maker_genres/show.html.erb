<%= render partial: 'layouts/sidebar' %>

<div class="show-mgenre">

  <h2><%= @mgenre.mname %></h2>

  <% unless @mgenres.present? %>
    <p>ユーザーがいません</p>
  <% else %>

    <% @mgenres.each do |user| %>

      <div class="show-maker-genres">

        <div class="show-maker-genres-user">

          <% if user.plofile_image.attached? %>

            <% if user.is_deleted == false %>
              <%= link_to user_path(user.id) do %>
                <%= image_tag user.plofile_image, class: "plofile-image" %>
              <% end %>
            <% else %>
              <%= link_to user_path(user.id) do %>
                <%= image_tag asset_path("no_image.jpg"), class: "plofile-image" %>
              <% end %>
            <% end %>

          <% else %>
            <%= link_to user_path(user.id) do %>
              <%= image_tag asset_path("no_image.jpg"), class: "plofile-image" %>
            <% end %>
          <% end %>

          <div class="show-maker-genres-right">
            <% if user.is_deleted == false %>
            <div class="show-maker-genres-name"><%= link_to user.name, user_path(user.id)  %></div>
            <% else %>
            <div class="user-name"><%=link_to "退会済ユーザー", user_path(user.id) %></div>
            <% end %>
            <div class="show-maker-genres-car"><%= link_to user.maker_genre.mname, user_path(user.id) %>. <%= link_to user.car_name, user_path(user.id) %></div>
          </div>

          <% if user.is_deleted == false %>
            <% if user.id == current_user.id %>
            <% else %>
              <div class="show-mgenre-follow">
                <% if current_user.following(user) %>
                  <i class="fa-solid fa-handshake-simple-slash"></i><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn" %>
                <% else %>
                  <i class="fa-solid fa-handshake-simple"></i><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn" %>
                <% end %>
              </div>
            <% end %>
          <% else %>
          <% end %>

        </div>

      </div>

    <% end %>
  <% end %>
</div>