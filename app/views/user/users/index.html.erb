 <%= render partial: 'layouts/sidebar' %>

 <div class="index-users">

  <h2>Users!</h2>

  <% unless @search_users.present? %>
    <p>該当するユーザーがいません</p>
  <% else %>

    <% @search_users.each do |user| %>

      <div class="index-user">
        <div class="index-user-content">
          <% if user.plofile_image.attached? %>

            <% if user.is_deleted == false %>
              <%= link_to user_path(user.id) do %>
                <%= image_tag user.plofile_image, class: "plofile-image" %>
              <% end %>
            <% else %>
              <%= link_to user_path(user.id) do %>
                <%= image_tag asset_path("no_image.jpg"), class: "plofile-image" %>
              <% end %>
            <% end %>

          <% else %>

            <%= link_to user_path(user.id) do %>
              <%= image_tag asset_path("no_image.jpg"), class: "plofile-image" %>
            <% end %>

          <% end %>


            <div class="index-user-right">
              <% if user.is_deleted == false %>
              <div class="index-user-name"><%= link_to user.name, user_path(user.id) %></div>
              <% else %>
              <div class="index-user-name"><%= link_to "退会済ユーザー", user_path(user.id) %></div>
              <% end %>
              <div class="index-user-car"><%= link_to user.maker_genre.mname, user_path(user.id) %>. <%= link_to user.car_name, user_path(user.id) %></div>
            </div>


          <% if user.is_deleted == false %>
            <% if user.id == current_user.id %>
              <% else %>
                <div class="index-user-follow">
                  <div id = "follow_<%= user.id %>">
                    <%= render 'user/relationships/follow', user: user %>
                  </div>
                </div>
            <% end %>
          <% else %>
          <% end %>


        </div>


      </div>
    <% end %>

  <% end %>

  <div class="page">
    <%= paginate @search_users %>
  </div>

</div>